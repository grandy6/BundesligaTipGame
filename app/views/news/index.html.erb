<h1>Neuigkeiten</h1>
<%= link_to 'Neue News', new_news_path %>
<br/>
<br/> 
<% @news.each do |news| %>
  <article>
    <div class="news_actions">
      <%= link_to 'LÃ¶schen', edit_news_path(news) %>
      <%= link_to 'Bearbeiten', news, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <h2><%= link_to news.title, news %></h2>
    <p class="news_categories">Autor:  Datum: <%= news.created_at.strftime("%d.%m.%Y %H:%M") %>
    <p class="news_content"><%= news.content %></p>
    <p class="news_categories">Kategorien: 
      <% @CategoryString = "" %>
      <% news.category_ids.each do |n| %>
         <% @CategoryString += Category.find(n).name + ", " %>
      <% end %>
      <%= @CategoryString[0..-3] %>
    </p>
  </article>
<% end %>
